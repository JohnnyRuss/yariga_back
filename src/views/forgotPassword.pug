extends base

block content
  script.
    document.addEventListener("DOMContentLoaded",function(){
      const copyPinButton = document.querySelector(".forgot-password__copy-pin--btn");
      const pinEl = document.querySelector(".forgot-password__pin");
      const copyPinButtonPopper = document.querySelector(".forgot-password__copy-pin--btn__popper");
      copyPinButton.addEventListener("click", function (e) {
        if (!pinEl) return;
        const pin = pinEl.textContent;
        navigator.clipboard.writeText(pin);
        if (!copyPinButtonPopper) return;
        copyPinButtonPopper.classList.add("visible");
        setTimeout(() => {
          copyPinButtonPopper.classList.remove("visible");
        }, 3000);
      });
    })
  p.warning__msg #{username} PIN is valid for 10 minutes
  p.forgot-password__pin #{pin }
  div.forgot-password__copy-pin--btn__box
