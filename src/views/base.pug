doctype html
html(lang="en")
  head
    - const origin = process.env.APP_ORIGIN
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    style.
      @import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100;1,300&display=swap");

      *{
        margin: 0;
        padding: 0;
      }
      body {
        font-family: "Roboto", sans-serif;
      }
      table{
        table-layout: fixed;
        border-spacing:0;
      }
      .container{
        display:block;
        width:600px;
        max-width:100%;
        margin:0 auto;
        padding:20px;
      }
      .content__box{
        width:100%;
        text-align:center;
        padding:40px 20px;
        border:1px solid #e4e8ef;
        border-radius: 8px;
        box-shadow: 0px 5px 8px 0px rgba(0, 0, 0, 0.3);
      }
      .logo__fig{
        width:100%;
      }
      .logo__fig img{
        width:120px;
        object-fit:contain;
      }
      .heading{
        letter-spacing: 1px;
        line-height: 1.5;
        margin-top:18px;
      }
      .subheading{
        font-weight: 500;
        letter-spacing: 1px;
        line-height: 1.3;
        text-align: center;
      }
      .tertiary-text{
        font-size: 16px;
        color: #333;
        font-weight: 500;
        letter-spacing: 1px;
        margin-top:18px;
      }
      .list{
        margin-top:8px;
        text-align:start;
      }
      .list-item--head{
        font-weight: 600;
        margin-top:12px;
      }
      .list-item--msg {
        font-style: italic;
        font-size: 14px;
        margin-top: 5px;
        padding-left: 12px;
        color: #333;
      }
      .important-msg{
        color: #333;
        text-align:start;
        font-weight: 500;
        letter-spacing: 1px;
        font-size: 14px;
        padding-top:18px;
      }
      .warning__msg {
        font-weight: 400;
        font-size: 16px !important;
      }
      .forgot-password__pin p {
        font-size: 26px;
        letter-spacing: 8px;
        margin-top:18px;
      }
      .regards{
        display:inline-block;
        margin-top:25px;
        text-align:end;
        color: #333;
        font-size: 14px;
        width: 100%;
        position:relative;
      }
      .regards.last-child {
        margin-top:18px !important;
      }
      .regards p{
        position:absolute;
        right:0;
        top:0;
        bottom:0;
      }
      .text-center{
        text-align:center;
      }
      .paragraph{
        font-size:16px;
        text-align:start;
        margin-top:12px;
      }
      .address{
        margin-top:25px;
      }
      .email-link{
        color:inherit;
        font-weight:800;
      }
    title Blog
  body 
